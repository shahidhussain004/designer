{
  // Use the workspace TypeScript installation
  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.enablePromptUseWorkspaceTsdk": true,

  // Ensure ESLint uses the project's node_modules
  "eslint.nodePath": "${workspaceFolder}/node_modules",
  "eslint.packageManager": "npm",
  "eslint.workingDirectories": [
    { "mode": "auto" }
  ],
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "eslint.run": "onSave",

  // Auto-fix ESLint issues on save
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },

  // Optional: set default formatter to Prettier if installed
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  // Reduce noise from build artifacts in explorer
  "files.exclude": {
    "**/.next": true,
    "**/node_modules": true
  }
}
