{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  },
  "AllowedHosts": "*",
  "Port": 8082,
  "MongoDbSettings": {
    "ConnectionString": "mongodb://mongo_user:mongo_pass_dev@localhost:27017/?authSource=admin",
    "DatabaseName": "lms_db"
  },
  "AwsSettings": {
    "AccessKeyId": "",
    "SecretAccessKey": "",
    "Region": "us-east-1",
    "VideoBucketName": "designer-marketplace-videos",
    "CertificateBucketName": "designer-marketplace-certificates",
    "CloudFrontDomain": "cdn.example.com",
    "PresignedUrlExpirationMinutes": 60
  },
  "JwtSettings": {
    "SecretKey": "your-super-secret-key-that-is-at-least-32-characters-long",
    "Issuer": "designer-marketplace",
    "Audience": "designer-marketplace-clients",
    "ExpirationMinutes": 60
  },
  "KafkaSettings": {
    "BootstrapServers": "localhost:9092",
    "GroupId": "lms-service-group"
  },
  "RedisSettings": {
    "ConnectionString": "localhost:6379"
  },
  "CertificateSettings": {
    "BaseVerificationUrl": "https://marketplace.example.com/verify",
    "CompanyName": "Designer Marketplace",
    "ExpirationYears": 0
  },
  "Urls": "http://0.0.0.0:8082"
}
